<h1>Listing</h1>

<table class="table table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td data-js-price=true><%= post.price %></td>
        <td>
          <%= link_to 'Show', post, class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

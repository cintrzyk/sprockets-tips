<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= @post.title %></h4>
    <h6 class="card-subtitle mb-2 text-muted" data-js-price=true><%= @post.price %></h6>
    <p class="card-text"><%= @post.body.html_safe %></p>
    <%= link_to 'Edit', edit_post_path(@post), class: 'card-link' %>
    <%= link_to 'Back', posts_path, class: 'card-link' %>
  </div>
</div>
